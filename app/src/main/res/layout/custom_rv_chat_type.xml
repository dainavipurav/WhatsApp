<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_dimen_ldpi"
    android:background="@color/chipBackground"
    app:cardCornerRadius="@dimen/material_dimen_mdpi"
    app:cardElevation="@dimen/material_dimen_ldpi"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_dimen_ldpi">

        <TextView
            android:id="@+id/chipChatsMessageType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hii"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>